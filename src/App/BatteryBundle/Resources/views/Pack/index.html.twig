{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Welcome to Recycle Batteries application</h1>
    <p>
        Click <a href="{{ path('batterypack_new') }}">here</a> to add new batteries to the box
    </p>

    <p>
        Statistics:
    </p>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Battery Type</th>
                <th>Total Count</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.count_sum }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
